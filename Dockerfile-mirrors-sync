FROM alpine:3.8

ENV \
	LC_ALL=en_US.UTF-8 \
	LANG=en_US.UTF-8 \
	LANGUAGE=en_US.UTF-8

RUN \
	apk add --no-cache \
		python3=3.6.6-r0 && \
	python3 -m ensurepip && \
	pip3 install pip==18.01 && \
	pip3 install \
		aiohttp==3.5.4

COPY mirrors-sync.py /
CMD ["python3", "mirrors-sync.py"]

RUN adduser -S mirrors-sync
USER mirrors-sync
