[
  {
    "name": "${container_name}",
    "image": "${container_image}",
    "memoryReservation": ${container_memory},
    "cpu": ${container_cpu},
    "essential": true,
    "ulimits": [{
          "softLimit": 4096,
          "hardLimit": 4096,
          "name": "nofile"
    }],
    "environment": [{
        "name": "LOGSTASH_HOST",
        "value": "${logstash_host}"
    },{
        "name": "LOGSTASH_PORT",
        "value": "${logstash_port}"
    },{
        "name": "SENTRY_DSN",
        "value": "${sentry_dsn}"
    }]
  }
]
